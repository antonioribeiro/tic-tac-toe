{
    "require": {
        "php": ">=7.2",
        "nikic/fast-route": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=7.0",
        "symfony/var-dumper": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "stan": "vendor/bin/phpstan analyse --level=7 app tests"
    },
    "config": {
        "sort-packages": true
    }
}
